<section class="section" id="features">
    <div class="container">
        <div class="has-text-centered mb-6">
            <h2 class="title is-2 has-text-weight-bold">
                <span class="icon is-large">
                    <i class="fas fa-star"></i>
                </span>
                <span>Features</span>
            </h2>
            <p class="subtitle is-5 has-text-grey">Powerful tools to explore GitHub profiles</p>
        </div>
        <div class="columns is-multiline">
            @foreach (var feature in featureTexts)
            {
                <div class="column is-one-third">
                    <div class="card fade-in-up" style="height:100%;">
                        <div class="card-content">
                            <div class="media mb-3">
                                <div class="media-left">
                                    <span class="icon is-large has-text-primary">
                                        <i class="@feature.Icon fa-2x"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="content">
                                <h3 class="title is-4">@feature.Header</h3>
                                <p class="has-text-grey">@feature.Span</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

